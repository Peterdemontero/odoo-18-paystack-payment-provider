<odoo>
    <template id="paystack_redirect_form">
        <t t-call="web.layout">
            <div class="o_payment_redirect">
                <p>Redirecting you to Paystack...</p>
                <form id="paystack_form" t-attf-action="{{redirect_url}}" method="get">
                </form>
            </div>
            <script>
                document.getElementById('paystack_form').submit();
            </script>
        </t>
    </template>
</odoo>







